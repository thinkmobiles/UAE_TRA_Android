<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightSmall"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvTitle_SISSP"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="?attr/colorPrimary"
        android:textSize="18sp"
        tools:text="SMS Spam. SMS Spam. SMS Spam. SMS Spam. SMS Spam"/>

    <Space
        android:layout_width="16dp"
        android:layout_height="match_parent"/>

    <com.uae.tra_smart_services.customviews.ThemedImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        app:imageSrc="@drawable/ic_spam_arrow"
        app:tintColor="?attr/colorPrimary"/>

</LinearLayout>