<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlGlobalContainer_AH"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/vTabBarSeparator_AH">

        <FrameLayout
            android:id="@+id/flContainer_AH"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            tools:background="@android:color/darker_gray"/>
        <!--android:layout_below="@id/toolbar"/>-->

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>

    </RelativeLayout>

    <View
        android:id="@+id/vTabBarSeparator_AH"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/rgBottomNavRadio_AH"
        android:background="@color/activity_home_tab_bar_top_border"/>

    <include
        android:id="@+id/rgBottomNavRadio_AH"
        layout="@layout/layout_bottom_nav_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>