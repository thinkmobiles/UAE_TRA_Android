<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="?attr/actionBarSize">

    <com.uae.tra_smart_services.customviews.ProgressLoaderView
        android:id="@+id/loaderView"
        app:hexagonSrc="@drawable/splash_logo"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/tvResult_FS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:text="Internet speed: 7.45 Mbit"/>

    <Button
        android:id="@+id/btnRunSpeedtest_FS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="@string/fragment_speed_test_run"
        android:textColor="?attr/colorPrimary"/>

</LinearLayout>