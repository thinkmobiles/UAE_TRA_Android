    <style name="AppThemeBlackAndWhite" parent="BaseAppTheme">
        <item name="colorPrimary">@android:color/black</item>
        <item name="mainBackground">@drawable/res_bg_2_gray</item>
        <item name="favoritesBackground">@drawable/favorites_bg_gray</item>
