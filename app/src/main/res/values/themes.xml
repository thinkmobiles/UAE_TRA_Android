<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:layoutDirection">locale</item>
        <item name="android:textDirection">locale</item>
        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">?attr/colorPrimary</item>

        <item name="hexagonHeaderButtonColor">?attr/colorPrimary</item>
        <item name="authorizationTextColors">?attr/colorPrimary</item>
        <item name="authorizationDrawableColors">?attr/colorPrimary</item>
        <item name="themeMainColor">?attr/colorPrimary</item>
        <item name="hexagonHeaderButtonPressedColor">#ff5b61ff</item>
        <item name="addServiceColor">#f68f1e</item>
        <item name="shadowBackgroundColor">#fff5ea</item>
        <item name="dragDeleteColor">#f00</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="userProfileBackground">@drawable/img_bg</item>
        <item name="mainBackground">@drawable/res_bg_2</item>
        <item name="favoritesBackground">@drawable/favorites_bg</item>
    </style>

    <style name="AppThemeOrange" parent="BaseAppTheme">
        <item name="colorPrimary">@color/hex_primary_orange</item>
        <item name="serviceInfoBackground">@color/hex_translucent_orange</item>
        <item name="toolbarBackground">@color/hex_toolbar_orange</item>
        <item name="backgroundServiceItemThemedIcon">@drawable/background_service_item_icon_orange</item>
        <item name="spinnerItemThemedBackground">@drawable/background_spinner_item_orange</item>
        <item name="authorizationButtonsBackground">@drawable/selector_authorization_buttons_orange</item>
        <item name="hexagonHeaderButtonPressedColor">@color/hex_dark_orange</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/hex_dark_orange</item>
        <item name="android:textColorPrimary">@color/hex_text_color_white</item>

        <item name="homePageHeaderBackground">@color/hex_primary_orange</item>
        <item name="globalButtonTextColor">@color/hex_primary_orange</item>
        <item name="globalButtonSelector">@drawable/selector_bottom_nav_radio_text_orange</item>
        <item name="android:layoutDirection">locale</item>
    </style>

    <style name="AppThemeGreen" parent="BaseAppTheme">
        <item name="colorPrimary">@color/hex_primary_green</item>
        <item name="serviceInfoBackground">@color/hex_translucent_green</item>
