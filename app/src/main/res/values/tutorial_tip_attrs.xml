<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TutorialTip">
        <attr name="titleBorderWidth" format="dimension"/>
        <attr name="linePointerWidth" format="dimension"/>
        <attr name="viewPointerRadius" format="dimension"/>

        <attr name="tipTextSize" format="dimension"/>
        <attr name="titleTextSize" format="dimension"/>

        <attr name="linePointerColor" format="color"/>
        <attr name="tipTextColor" format="color"/>
        <attr name="viewPointerColor" format="color"/>

        <attr name="tipText" format="string"/>
        <attr name="titleText" format="string"/>

        <attr name="tutorialTipType" format="enum">
            <enum name="avatar" value="0"/>
            <enum name="hotBar" value="1"/>
            <enum name="tabBar" value="2"/>
        </attr>
    </declare-styleable>
</resources>